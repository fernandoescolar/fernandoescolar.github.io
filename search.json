---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | strip_newlines }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ post.url }}",
      "date"     : "{{ post.date }}",
      "content"  : "{{ post.content | strip_html | strip_newlines | url_decode | remove_chars }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
